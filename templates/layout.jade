doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width', initial-scale=1.0, user-scalable=yes)
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Ubuntu:300,400,500,700,300italic,400italic,500italic,700italic|Merriweather:400,300,300italic,400italic,700,700italic,900,900italic", rel="stylesheet" type="text/css")
      link(rel='stylesheet', href='//normalize-css.googlecode.com/svn/trunk/normalize.css')
      link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')
  body(class=bodyclass)
    block header
      header.main-header
        div.logo-container
          div.logo
            a(href=locals.url)
        nav.nav-container
          ul.nav
            li.nav-item Blog
            li.nav-item Résumé
            li.nav-item @jomrcr
    block content
      div#content
        div.container
          h2 !!! this is some default text for when nothing overrides the content
          p !!! probably can get rid of the contentclass
    block footer
      footer.main-footer
        section.copy
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }. All rights reserved.
