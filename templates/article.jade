extends layout

block append vars
  - bodyclass = 'golden';

block prepend title
  | #{ page.title + " - "}

block append head
  link(rel='stylesheet', href='/css/blog.css')

block header
  include author
  header.blog-header.golden-content.center-block
    h1= page.title
    div.blog-summary-container
      p.blog-summary
        | !{moment(page.metadata.date).format('DD. MMMM YYYY')}
        br
        | #{ "Written by " }
        mixin author(page.metadata.author)

block content
  div.golden-content.center-block
    article.article
      section.article-content 
        !{ typogr(page.html).typogrify() }
  div.pagination
