extends layout

block append head
	link(rel='stylesheet', href='/css/index.css')

block header

block content
	- var index = contents['index.json'].metadata;
	section#splash
		h1!= index.splash.name
		p!= index.splash.summary
	div.container
		header#main-header
			nav.nav-container
				ul.nav
					li.nav-item!= index.nav.about.label
					li.nav-item!= index.nav.projects.label
					li.nav-item!= index.nav.blog.label
		section#about.row
			div.col-md-4
				img(src=index.about.picture.src, alt=index.about.picture.alt).img-circle
			div.col-md-8
				p!= index.about.summary
		section#projects.row
			each project in index.projects
				div.col-md-8
					h2!= project.title
					p!= project.summary
				div.col-md-4
					img(src=project.picture.src, alt=project.picture.alt).img-rounded
		section#blog
			each article in contents.articles
				p!= article['index.md'].title

block footer
	footer#main-footer
		section.copy
			p &copy; #{ new Date().getFullYear() } #{ locals.owner }. All rights reserved.